{
  "codeLens.enable": true,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"]
    },
    "elixirLS": {
      "command": "~/.config/coc/extensions/node_modules/coc-elixir/els-release/language_server.sh",
      "filetypes": ["elixir", "eelixir"]
    },
    "erlang": {
      "command": "erlang_ls",
      "filetypes": ["erlang"]
    },
    "golang": {
      "command": "go-langserver",
      "filetypes": ["go"],
      "initializationOptions": {
        "gocodeCompletionEnabled": true,
        "diagnosticsEnabled": true,
        "lintTool": "golint"
      }
    },
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      // customize filetypes to your needs
      "filetypes": ["typescript", "typescriptreact", "graphql"]
    },
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": ["vim", "eruby", "markdown", "yaml", "javascript", "css", "dockerfile", "elixir", "html"]
    }
  }
}

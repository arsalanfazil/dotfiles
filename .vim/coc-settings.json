{
  "codeLens.enable": true,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"]
    },
    // "elixir": {
    //   "pathToElixirLS": "~/.elixir-ls/release/language_server.sh",
    //   "filetypes": ["elixir", "eelixir"]
    // },
    "elixirLS": {
      "command": "~/.elixir-ls/release/language_server.sh",
      "filetypes": ["elixir", "eelixir"]
    },
    "erlang": {
      "command": "erlang_ls",
      "filetypes": ["erlang"]
    },
    "diagnostic.displayByAle": true,
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": ["vim", "eruby", "markdown", "yaml", "javascript", "css", "dockerfile", "elixir", "html"]
    }
  }
}
